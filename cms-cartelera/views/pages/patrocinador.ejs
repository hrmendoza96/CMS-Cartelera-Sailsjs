<script src="https://cdn.jsdelivr.net/npm/@simonwep/pickr/dist/pickr.min.js"></script>
<script>
    const pickr = Pickr.create({
        el: '.color-picker',
        theme: 'monolith', // or 'monolith', or 'nano'

        components: {

            // Main components
            preview: false,
            opacity: false,
            hue: true,

            // Input / output Options
            interaction: {
                hex: true,
                rgba: false,
                hsla: false,
                hsva: false,
                cmyk: false,
                input: true,
                clear: false,
                save: false
            }
        }
    });
    let input = document.getElementById('input-color');

    pickr.on('init', instance => {
        pickr.setColor(input.value, false);
        //console.log('init', instance._color.toHEXA());
    }).on('change', (color, instance) => {
        //console.log("#" + color.toHEXA()[0] + color.toHEXA()[1] + color.toHEXA()[2]);
        input.value = "#" + color.toHEXA()[0] + color.toHEXA()[1] + color.toHEXA()[2];
        pickr.setColor(input.value, false);
    });
</script>