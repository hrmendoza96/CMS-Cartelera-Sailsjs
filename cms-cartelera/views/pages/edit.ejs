<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/peliculas/list">Peliculas</a></li>
    <li class="breadcrumb-item active">Editar</li>
</ol>
<h1 class="display-4">Editar Pelicula</h1>
<form method="post" action="/peliculas/update/<%= pelicula.id %>">
    <div class="form-group">
        <label for="title">Nombre</label>
        <input type="text" name="nombre" class="form-control" value="<%= pelicula.nombre %>">
    </div>
    <div class="form-group">
        <label for="url">URL Imagen</label>
        <input type="text" name="url" class="form-control" value="<%= pelicula.url %>">
    </div>
    <div class="form-group">
        <label for="url">Fecha de Inicio</label>
        <input type="text" name="fecha_inicio" class="form-control" placeholder="MM/DD/YYYY" value="<%= pelicula.fecha_inicio %>">
    </div>
    <div class="form-group">
        <label for="url">Fecha de Vencimiento</label>
        <input type="text" name="fecha_vencimiento" class="form-control" placeholder="MM/DD/YYYY" value="<%= pelicula.fecha_vencimiento %>">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>